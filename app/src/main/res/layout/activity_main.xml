<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_weight="3"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/workingsTextView"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_margin="5dp"
            android:background="@color/cardview_dark_background"
            android:gravity="top|start"
            android:padding="10dp"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:weight="1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/resultsTextView"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_margin="5dp"
            android:background="@color/cardview_dark_background"
            android:gravity="bottom|end"
            android:padding="10dp"
            android:text="20"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:weight="1"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clearOnClick"
                android:text="C"
                android:textSize="50sp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="oneOnClick"
                android:text="1"
                android:textSize="50sp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="twoOnClick"
                android:text="2"
                android:textSize="50sp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="threeOnClick"
                android:text="3"
                android:textSize="50sp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="addOnClick"
                android:textSize="50sp"
                android:text="+"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:onClick="clearOnClick"
                android:text="^"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="fourOnClick"
                android:text="4"
                android:textSize="50sp"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="fiveOnClick"
                android:textSize="50sp"
                android:text="5"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:onClick="sixOnClick"
                android:text="6"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:onClick="subOnClick"
                android:text="-"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:onClick="dotOnClick"
                android:text="."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="sevenOnClick"
                android:textSize="50sp"
                android:text="7"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="eightOnClick"
                android:textSize="50sp"
                android:backgroundTint="@color/grey"
                android:text="8"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:onClick="nineOnClick"
                android:backgroundTint="@color/grey"
                android:text="9"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="50sp"
                android:onClick="mulOnClick"
                android:backgroundTint="@color/grey"
                android:text="*"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:onClick="equalsOnClick"
                android:text="="
                android:textColor="@color/white"
                android:textSize="50sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:text="("
                android:onClick="bracketOnClick"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="zeroOnClick"
                android:textSize="50sp"
                android:text="0"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:text=")"
                android:onClick="bracketOnClick"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="divOnClick"
                android:textSize="50sp"
                android:text="/"
                android:backgroundTint="@color/grey"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>